<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bw_color_very_light_grey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.simplysmart.service.activity.MainActivity_V2"
    tools:showIn="@layout/activity_main__v2">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/complaintList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:background="@color/bw_color_white"
                android:childIndicator="@color/primary"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="0.5dp"
                android:groupIndicator="@color/accent"
                android:padding="5dp" />

            <include layout="@layout/custom_error_layout" />

        </RelativeLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical" />

</RelativeLayout>
