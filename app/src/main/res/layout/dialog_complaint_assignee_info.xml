<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/bottom_layout"
    android:layout_gravity="end"
    android:layout_margin="10dp"
    android:background="@drawable/rectangular_round_border_red"
    android:paddingBottom="20dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="20dp"
    android:visibility="visible">

    <ImageView
        android:id="@+id/assignee_photo"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/circle_white" />

    <TextView
        android:id="@+id/txt_assign_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/assignee_photo"
        android:text="Assign To"
        android:textColor="@color/bw_color_white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_assignee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_assign_to"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/assignee_photo"
        android:text="Electrician"
        android:textColor="@color/bw_color_white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_contact_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_assignee_name"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/assignee_photo"
        android:text="Contact Number : 9876543210"
        android:textColor="@color/bw_color_white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_assign_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:text="Thu 12:30 PM"
        android:textColor="@color/bw_color_white"
        android:textSize="14sp" />

</RelativeLayout>
