<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/card_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:alpha="0.4"
                    android:background="@drawable/rounded_border_rectangle"
                    android:src="@drawable/photo_default" />

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="match_parent"
                android:background="@color/bw_color_light_gray" />

            <LinearLayout
                android:id="@+id/readingLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/reading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5894 kg"
                    android:paddingBottom="4dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12th Dec 2016,12:00 pm"
                    android:textSize="11sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/edit"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|end"
                android:textSize="14sp"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/edit_value" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>