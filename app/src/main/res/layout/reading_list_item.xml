<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:weightSum="1.0">

        <ImageButton
            android:id="@+id/edit"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="0.2"
            android:alpha="0.4"
            android:background="@color/transparent"
            android:contentDescription="@string/edit"
            android:src="@drawable/ic_mode_edit_black_48dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:text="12th Dec 2016,12:00 pm"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/reading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="5894 kg"
                android:textSize="19sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/photo"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="0.2"
            android:alpha="0.4"
            android:contentDescription="@string/reading_image"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_photo_black_48dp" />

    </LinearLayout>


    <View
        android:id="@+id/ref_line"
        android:layout_width="8dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:background="@color/accent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/accent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ref_line"
        android:background="@color/accent" />

    <View
        android:layout_width="1dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:background="@color/accent" />

</RelativeLayout>