<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.simplysmart.service.activity.HelpDeskActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bw_color_white"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/bw_color_red"
            android:visibility="gone">

            <TextView
                android:id="@+id/helpdesk_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:textColor="@color/bw_color_white"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/txt_helpdesk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/helpdesk_logo"
                android:gravity="center_vertical"
                android:text="Help Desk"
                android:textColor="@color/bw_color_white"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/bw_color_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/unit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:textColor="@color/bw_color_dark_gray"
                android:textSize="14sp"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/ll_open_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/bw_color_red"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:text="Open"
                    android:textColor="@color/bw_color_white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/btn_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/bw_color_dark_gray"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:text="Close"
                    android:textColor="@color/bw_color_white"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/bw_color_red"
                android:textSize="35sp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bw_color_light_gray"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--<include layout="@layout/custom_progress_dialog" />-->

            <include layout="@layout/custom_error_layout" />

            <ListView
                android:id="@+id/helpdesk_open_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:divider="@color/bw_color_light_gray"
                android:dividerHeight="1dp">

            </ListView>

        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
